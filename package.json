{
  "name": "workspace",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "tauri": "tauri",
    "format": "pnpm format:js && pnpm format:rs",
    "format:check": "pnpm format:js:check && pnpm format:rs:check",
    "format:js": "prettier --write .",
    "format:js:check": "prettier --check .",
    "format:rs": "cargo +nightly fmt",
    "format:rs:check": "cargo +nightly fmt -- --check",
    "lint": "pnpm lint:js && pnpm lint:rs",
    "lint:check": "pnpm lint:js:check && pnpm lint:rs:check",
    "lint:js": "oxlint --max-warnings=0 --fix .",
    "lint:js:check": "oxlint --max-warnings=0 .",
    "lint:rs": "cargo clippy --fix --allow-dirty --allow-staged -- -D warnings",
    "lint:rs:check": "cargo clippy -- -D warnings",
    "test": "pnpm test:js && pnpm test:rs",
    "test:js": "echo 'Not implemented yet'",
    "test:rs": "cargo test --workspace",
    "docs:dev": "pnpm --filter @deskulpt/docs dev",
    "docs:build": "pnpm --filter @deskulpt/docs build",
    "docs:preview": "pnpm --filter @deskulpt/docs preview",
    "docs:rs": "cargo +nightly doc --workspace --no-deps --exclude xtask-gen -Z rustdoc-map",
    "build": "tsc -b && vite build",
    "build:packages": "pnpm run --sequential --filter @deskulpt-test/* build",
    "ci:local": "pnpm ci:hygiene && pnpm ci:verify",
    "ci:local:fast": "pnpm ci:hygiene && pnpm ci:lint",
    "ci:hygiene": "pnpm ci:format && pnpm ci:deps && pnpm ci:generated",
    "ci:format": "pnpm format:check",
    "ci:deps": "pnpm knip && pnpm ci:deps:rust",
    "ci:deps:rust": "command -v cargo-shear >/dev/null 2>&1 && cargo shear || echo '⚠ cargo-shear not found, skipping...'",
    "ci:generated": "pnpm build:packages && cargo gen bindings && cargo gen schema && (git diff --exit-code --quiet || (echo '✗ Auto-generated files are out of date' && git status --porcelain && git --no-pager diff && exit 1))",
    "ci:verify": "pnpm ci:lint && pnpm ci:build",
    "ci:lint": "pnpm lint:check",
    "ci:build": "pnpm --filter deskulpt build && cargo check --workspace && cargo build --bin deskulpt"
  },
  "dependencies": {
    "@emotion/react": "catalog:",
    "@radix-ui/themes": "catalog:",
    "@tauri-apps/api": "catalog:",
    "react": "catalog:"
  },
  "devDependencies": {
    "@tauri-apps/cli": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "husky": "catalog:",
    "knip": "catalog:",
    "lint-staged": "catalog:",
    "oxlint": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-toml": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-toml"
    ],
    "alignEntries": true,
    "reorderKeys": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,mdx,html,css,scss,yml,yaml,toml}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "oxlint --fix",
    "*.rs": "rustfmt +nightly --"
  }
}
